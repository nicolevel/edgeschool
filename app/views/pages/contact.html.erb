<!-- Section: Contact v.1 -->
<section class="container-fluid" id="martop" style="background-color: #ADAAAA;">
<div class="container">
  <!-- Grid row -->
  <div class="row">

    <!-- Grid column -->
    <div class="col-lg-7 mb-lg-0 mb-4" >

      <!-- Form with header -->
      <div class="card" style="background-color: #ADAAAA;">
        <h1>contact us</h1>
        <h3>For more info or enquiries, please contact us on the details provided below.</h3>
        <h5>Tel: 076 8200059  |  Email: info@edgeschools.co.za</h5>
        <div class="card-body" style="background-color: #ADAAAA;">

          <!-- Body -->
          <div class="md-form" >
            <input type="text" id="form-name" class="form-control" placeholder="NAME" style="font-size: 25px;">
          </div>
          <div class="md-form">
            <input type="text" id="form-email" class="form-control" placeholder="EMAIL" style="font-size: 25px;">
          </div>
          <div class="md-form">
            <input type="text" id="form-Subject" class="form-control" placeholder="SUBJECT" style="font-size: 25px;">
          </div>
          <div class="md-form">
            <textarea type="text" id="form-text" class="form-control md-textarea" rows="4" placeholder="SEND MESSAGE" style="font-size: 25px;"></textarea>
          </div>
          <div class="text-center">
            <button class="btn btn-block btn-contact" style="font-size: 25px; font-weight: bold;">Submit</button>
          </div>
        </div>
      </div>
      <!-- Form with header -->

    </div>
    <!-- Grid column -->

    <!-- Grid column -->
    <div class="col-lg-5">

      <%= image_tag'image8.jpeg', size: "510x710" %>

    </div>
    <!-- Grid column -->

  </div>
  <!-- Grid row -->
</div>
</section>
