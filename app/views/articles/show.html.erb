<p id="notice"><%= notice %></p>

<p>
<% if @article.photo.present? %>
<%= image_tag(@article.photo, style:"width:100%")%>
<% else %>
<%= image_tag 'logo.png', style:"width:100%" %>
<% end %>
</p>

<p>

  <% if @article.music.present? %>
  <%= audio_tag(@article.music, controls: true, style:"width:100%") %>
  <% end %>

</p>


<p>
    <% if @article.movie.present? %>
  <%= video_tag(@article.movie, controls: true, type: 'video/mp4', style:"width:100%") %>
  <% end %>
  </p>

<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>
