<h1>New Article</h1>

<h1> Create a New Article! </h1>
<%= form_for :article, url: articles_path, html: {multipart: true} do |f| %>
<div class= "field" style="100%;">

  <% if @article.errors.any? %>
  <div id="error_expanation">
    <h2>
      <%= pluralize(@article.errors.count, "error") %>
      prohibited this article from being saved:
    </h2>

    <p>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
        <li>
          <%=msg %>

       </li>
     </ul>
     <% end %>
   </p>

   <% if alert %>
   <%= alert %>
   <% end %>
 </div>

 <% end %>




<p>
  <%= f.label :photo %><br>
  <%= f.file_field :photo, class:'form-control' %>
  </p>

  <p>
  <%= f.label :music %><br>
  <%= f.file_field :music, class:'form-control' %>
  </p>

  <p>
  <%= f.label :movie %><br>
  <%= f.file_field :movie, class:'form-control' %>
  </p>

<%= f.submit class: 'btn btn-lg btn-success'%>
</p>
</div>
<%end%>





<%= render 'form', article: @article %>

<%= link_to 'Back', articles_path %>
