<%= render 'shared/navbar' %>

<div class="blog" style="margin-top: 15% ">
<p id="notice"><%= notice %></p>


<div class="blogs">
<div class="container-fluid">

  <h2 class="h1-responsive font-weight-bold text-center my-5">Recent posts</h2>

  <p class="text-center w-responsive mx-auto mb-5">Discover what we are up to</p>

<hr>


<!--blogs -->
<div class="container-fluid blogcards">
  <% @blogs.each do |blog| %>
    <div class="row">
      <div class="card col-md-12 p-3">
        <div class="row ">
          <div class="col-md-4">
            <div class="blogimages">
           <%= cl_image_tag blog.photo %>
          </div>
        </div>
          <div class="col-md-8">
            <div class="card-block">
              <h6 class="card-title"><%= blog.title %></h6>
              <h7 class="card-text text-justify"><%= blog.body %></h7>
            </div>
          </br>
              <a href="" class="btn btn-primary">read more...</a>
          </div>
        </div>
            <hr>
      </div>
    </div>
  <% end %>
</div>
</div>
<hr>



